<resources>

    <style name="VoiceOrderTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/primaryYellow</item>
        <item name="colorPrimaryDark">@color/primaryBrown</item>
        <item name="colorAccent">@color/primaryBrown</item>

        <item name="colorControlNormal">@color/primaryBrown</item>
        <item name="colorControlActivated">@color/primaryBrown</item>
        <item name="colorControlHighlight">@color/primaryYellow</item>

        <item name="android:textColor">@color/primaryBrown</item>
        
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MainTheme" parent="VoiceOrderTheme">
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DetailTheme" parent="VoiceOrderTheme">
        <item name="actionBarStyle">@style/DetailActionBar</item>
    </style>

    <style name="MainActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="DetailActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="elevation">7dp</item>
    </style>
</resources>
