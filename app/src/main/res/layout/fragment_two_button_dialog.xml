<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context="com.rena21c.voiceorder.view.widgets.TwoButtonDialogFragment">

    <com.rena21c.voiceorder.view.widgets.CharacterWrapTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:lineSpacingExtra="9sp"
        android:textSize="22sp"
        tools:text="‘거상앱으로 전화드립니다’\n라고 꼭 말씀해주세요"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvMessage">

        <Button
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#adebebeb"
            android:lineSpacingExtra="11sp"
            android:textSize="20sp"
            tools:text="취소"/>

        <Button
            android:id="@+id/btnPositive"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:layout_toEndOf="@id/btnNegative"
            android:layout_toRightOf="@+id/btnNegative"
            android:background="@color/primaryYellow"
            android:lineSpacingExtra="11sp"
            android:textSize="20sp"
            tools:text="통화"/>
    </LinearLayout>

</RelativeLayout>
