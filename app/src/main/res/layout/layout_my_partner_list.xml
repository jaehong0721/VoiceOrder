<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMyPartner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottom_button_layout"/>

    <RelativeLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#F0F0F0"
        android:padding="9dp">

        <com.rena21c.voiceorder.view.widgets.AddPartnerButton
            android:id="@+id/btnAddPartner"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:background="@drawable/shape_colorful_border"
            app:text="내 연락처에서 추가/삭제"
            app:textColor="@color/primaryBrown"
            app:textSize="16"/>

    </RelativeLayout>
</RelativeLayout>
