<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rena21c.voiceorder.activities.VendorDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.rena21c.voiceorder.view.components.ContactInfoContainer
                android:id="@+id/contactInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.rena21c.voiceorder.view.components.ViewPagerWithIndicator
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.rena21c.voiceorder.view.components.BusinessInfoContainer
                android:id="@+id/businessInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
