<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryYellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/tvGuide"
        android:text="@string/voice_order_guide_main_instruction"
        android:textSize="@dimen/guideInstructionsTextSize"
        android:textColor="@color/textGuideInstruction"
        android:gravity="center"
   />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/tvExample"
        android:text="@string/guide_example"
        android:textSize="@dimen/guideExampleTextSize"
        android:textColor="@color/textGuideInstruction"
        android:gravity="center"
        android:layout_below="@+id/tvGuide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tvSubGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvExample"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="@string/voice_order_guide_sub_instruction"
        android:textColor="@color/dark_maroon"
        android:textSize="16sp"/>
</RelativeLayout>
