<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:id="@+id/tvGuide"
        android:text="@string/guide_instructions"
        android:textSize="@dimen/guideInstructionsTextSize"
        android:textColor="@color/textGuideInstruction"
        android:gravity="center"
   />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/tvExample"
        android:text="@string/guide_example"
        android:textSize="@dimen/guideExampleTextSize"
        android:textColor="@color/textGuideInstruction"
        android:gravity="center"
        android:layout_below="@+id/tvGuide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
