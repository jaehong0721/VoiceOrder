<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal">

    <com.rena21c.voiceorder.view.widgets.UnderLineButton
        android:id="@+id/btnRecommend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:selectedColor="@color/primaryBrown"
        app:selectedImage="@drawable/recommend_selected"
        app:text="업체추천"
        app:unselectedColor="@color/unselectedColor"
        app:unselectedImage="@drawable/recommend"/>

    <com.rena21c.voiceorder.view.widgets.UnderLineButton
        android:id="@+id/btnVoiceOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:selectedColor="@color/primaryBrown"
        app:selectedImage="@drawable/play_selected"
        app:text="음성주문"
        app:unselectedColor="@color/unselectedColor"
        app:unselectedImage="@drawable/play"/>

</LinearLayout>