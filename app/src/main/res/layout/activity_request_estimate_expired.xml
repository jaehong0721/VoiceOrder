<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/estimate_root_view"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black_05"
             android:paddingBottom="22dp"
             android:paddingLeft="20dp"
             android:paddingRight="19dp"
             android:paddingTop="55dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:lineSpacingExtra="12sp"
            android:text="견적요청 기간종료"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="견적요청이 기간(2주)이 만료되었습니다\n아직 납품업체를 찾지 못하신 경우에는\n새롭게 견적 요청을 진행해주세요"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/btnRequestEstimate"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSubTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/dark_maroon"
            android:text="견적요청 시작하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</FrameLayout>